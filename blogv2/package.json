{
    "name": "your-hugo-site",
    "version": "1.0.0",
    "description": "Hugo site with minification",
    "scripts": {
      "build": "hugo --minify && npm run minify-css",
      "minify-css": "postcss public/**/*.css --no-map --replace --use autoprefixer --use cssnano"
    },
    "engines": {
      "node": ">=18.0.0"
    },
    "devDependencies": {
      "autoprefixer": "^10.4.16",
      "cssnano": "^6.0.1",
      "postcss": "^8.4.31",
      "postcss-cli": "^10.1.0"
    }
  }